                                %td
                                    3 sec
                            %tr
                                %td
                                    %code pickup-time
                                %td
                                    Time until the pickup is refreshed and can be picked up again.
                                %td
                                    %a{:href => "/reference/time_periods"} Time Period
                                %td
                                    3 sec
                            %tr
                                %td
                                    %code effects
                                %td
                                    Show the pickup's particle effects.
                                %td
                                    %span.label.label-primary true/false
                                %td true
                            %tr
                                %td
                                    %code sounds
                                %td
                                    Play the pickup's sound effects.
                                %td
                                    %span.label.label-primary true/false
                                %td true


